{
  "name": "hearth",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @hearth/server dev\" \"pnpm --filter @hearth/display dev\" \"pnpm --filter @hearth/control dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "start": "pnpm --filter @hearth/server start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.8.0",
    "@eslint/js": "^9.8.0",
    "typescript": "^5.5.4",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0"
  }
}
